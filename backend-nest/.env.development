# =============================================================================
# GRC Platform - Development Environment Configuration
# =============================================================================
# This file contains development-specific defaults.
# Copy to .env for local development without Docker.
# =============================================================================

NODE_ENV=development
PORT=3002

# Database - Local PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=grc_platform
DB_SYNC=true

# Security - Development secret (change in production!)
JWT_SECRET=dev-jwt-secret-change-in-production-32chars
JWT_EXPIRES_IN=24h

# CORS - Allow local development servers
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# Demo credentials
DEMO_ADMIN_EMAIL=admin@grc-platform.local
DEMO_ADMIN_PASSWORD=TestPassword123!

# Audit logging
NEST_AUDIT_LOG_ENABLED=true
