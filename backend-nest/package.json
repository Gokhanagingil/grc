{
  "name": "backend-nest",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "start": "nest start",
    "build:once": "tsc -p tsconfig.build.json",
    "build": "nest build",
    "start:safe:ps": "cross-env SAFE_MODE=true ENABLE_QUEUE=false ENABLE_METRICS=false DB_TYPE=sqlite TYPEORM_CONNECTION=sqlite npm run start:wait:ps",
    "start:full:ps": "cross-env SAFE_MODE=false ENABLE_QUEUE=false ENABLE_METRICS=false DB_TYPE=postgres TYPEORM_CONNECTION=postgres npm run start:wait:ps",
    "start:dev": "cross-env NODE_ENV=development ts-node -r tsconfig-paths/register src/main.ts",
    "start:prod": "node dist/main.js",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" --max-warnings=0",
    "seed:admin": "ts-node -r tsconfig-paths/register scripts/seed-admin.ts",
    "seed": "ts-node -r tsconfig-paths/register scripts/seed.ts",
    "seed:dev-users": "ts-node -r tsconfig-paths/register scripts/seed-dev-users.ts",
    "seed:dictionaries": "ts-node -r tsconfig-paths/register scripts/seed-dictionaries.ts",
    "seed:permissions": "ts-node -r tsconfig-paths/register scripts/seed-permissions.ts",
    "seed:standards": "ts-node -r tsconfig-paths/register scripts/seed-standards.ts",
    "seed:controls": "ts-node -r tsconfig-paths/register scripts/seed-controls.ts",
    "seed:policies": "ts-node -r tsconfig-paths/register scripts/seed-policies.ts",
    "seed:risk-catalog": "ts-node -r tsconfig-paths/register scripts/seed-risk-catalog.ts",
    "seed:entity-registry": "ts-node -r tsconfig-paths/register scripts/seed-entity-registry.ts",
    "seed:risk-instances": "ts-node -r tsconfig-paths/register scripts/seed-risk-instances.ts",
    "seed:bcm-demo": "ts-node -r tsconfig-paths/register scripts/seed-bcm-demo.ts",
    "seed:calendar": "ts-node -r tsconfig-paths/register scripts/seed-calendar-from-existing.ts",
    "seed:audit-demo": "ts-node -r tsconfig-paths/register scripts/seed-audit-demo.ts",
    "seed:demo-experience": "ts-node -r tsconfig-paths/register scripts/seed-demo-experience.ts",
    "seed:all": "ts-node -r tsconfig-paths/register scripts/seed-all.ts",
    "fix:standard-clause-constraint": "ts-node -r tsconfig-paths/register scripts/fix-standard-clause-constraint.ts",
    "debug:users": "ts-node -r tsconfig-paths/register scripts/debug-users.ts",
    "debug:list-users": "ts-node -r tsconfig-paths/register scripts/debug-list-users.ts",
    "test:login": "ts-node -r tsconfig-paths/register scripts/test-login.ts",
    "smoke:demo-data": "ts-node -r tsconfig-paths/register scripts/smoke-demo-data.ts",
    "smoke:demo-experience": "ts-node -r tsconfig-paths/register scripts/smoke-demo-experience.ts",
    "check:schema": "ts-node -r tsconfig-paths/register scripts/check-db-schema.ts",
    "check:policy-schema": "ts-node -r tsconfig-paths/register scripts/check-policy-schema.ts",
    "fix:policy-schema": "ts-node -r tsconfig-paths/register scripts/fix-policy-schema.ts",
    "phase0:snapshot": "ts-node -r tsconfig-paths/register scripts/phase0-db-snapshot.ts",
    "fix:sqlite": "ts-node -r tsconfig-paths/register scripts/sqlite-repair.ts",
    "reset:policies": "ts-node -r tsconfig-paths/register scripts/reset-policies-table.ts",
    "phase2:boot": "ts-node -r tsconfig-paths/register scripts/phase2-boot-validation.ts",
    "phase3:smoke": "ts-node -r tsconfig-paths/register scripts/phase3-smoke-validation.ts",
    "phase4:integrity": "ts-node -r tsconfig-paths/register scripts/phase4-integrity-verification.ts",
    "phase5:certify": "ts-node -r tsconfig-paths/register scripts/phase5-final-certification.ts",
    "start:wait:ps": "powershell -NoLogo -NoProfile -ExecutionPolicy Bypass -Command \"& { & '.\\scripts\\start-and-wait.ps1' }\"",
    "start:wait:sh": "bash ./scripts/start-and-wait.sh",
    "health:probe:ps": "powershell -NoLogo -NoProfile -ExecutionPolicy Bypass -Command \"& { & '.\\scripts\\health-probe.ps1' }\"",
    "health:probe:sh": "bash ./scripts/health-probe.sh",
    "health:probe": "node ../scripts/health-smoke.js",
    "health:ps": "powershell -NoLogo -NoProfile -ExecutionPolicy Bypass -Command \"& { & '.\\scripts\\health-smoke.ps1' }\"",
    "health:sh": "bash ./scripts/health-smoke.sh",
    "probe:http:ps": "powershell -NoLogo -NoProfile -ExecutionPolicy Bypass -Command \"& { & '.\\scripts\\http-probe.ps1' }\"",
    "probe:http:sh": "bash ./scripts/http-probe.sh",
    "login:ps": "powershell -NoLogo -NoProfile -ExecutionPolicy Bypass -Command \"& { & '.\\scripts\\login-smoke.ps1' }\"",
    "login:sh": "bash ./scripts/login-smoke.sh",
    "smoke:server": "ts-node -r tsconfig-paths/register scripts/smoke-server.ts",
    "smoke:login": "node ../scripts/login-smoke.js",
    "smoke:auth": "node ../scripts/auth-tenant-smoke.js",
    "health:probe": "node ../scripts/health-smoke.js",
    "smoke:all": "ts-node -r tsconfig-paths/register scripts/smoke-all.ts",
    "smoke:standards": "ts-node -r tsconfig-paths/register scripts/smoke-standards.ts",
    "smoke:governance": "npm run smoke:policies",
    "smoke:policies": "ts-node -r tsconfig-paths/register scripts/smoke-policies.ts",
    "smoke:bcm-processes": "ts-node -r tsconfig-paths/register scripts/smoke-bcm-processes.ts",
    "smoke:audit-flow": "ts-node -r tsconfig-paths/register scripts/smoke-audit-flow.ts",
    "smoke:calendar": "ts-node -r tsconfig-paths/register scripts/smoke-calendar.ts",
    "smoke:requirements": "ts-node -r tsconfig-paths/register scripts/smoke-requirements.ts",
    "smoke:bcm": "ts-node -r tsconfig-paths/register scripts/smoke-bcm.ts",
    "test:bcm-validation": "ts-node -r tsconfig-paths/register scripts/test-bcm-validation.ts",
    "smoke:modules": "npm run smoke:login && npm run smoke:policies && npm run smoke:requirements && npm run smoke:bcm",
    "smoke:admin": "ts-node -r tsconfig-paths/register scripts/smoke-admin.ts",
    "smoke:role-permissions": "ts-node -r tsconfig-paths/register scripts/smoke-role-permissions.ts",
    "smoke:ui-click": "ts-node -r tsconfig-paths/register scripts/ui-click-smoke.ts",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -d src/data-source.ts src/migrations/Migration",
    "migration:create": "typeorm-ts-node-commonjs migration:create src/migrations/Migration",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d src/data-source.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d src/data-source.ts",
    "migration:show": "typeorm-ts-node-commonjs migration:show -d src/data-source.ts",
    "test:baseline-migration": "ts-node -r tsconfig-paths/register scripts/test-baseline-migration.ts",
    "pg:dryrun": "ts-node -r tsconfig-paths/register scripts/postgres-dryrun.ts",
    "db:reset:dev": "ts-node -r tsconfig-paths/register scripts/reset-dev-db.ts",
    "admin:probe": "ts-node -r tsconfig-paths/register scripts/admin-probe.ts",
    "fe:start:wait:ps": "powershell -NoLogo -NoProfile -ExecutionPolicy Bypass -Command \"& { & '.\\frontend\\scripts\\fe-start-and-wait.ps1' }\"",
    "fe:diagnose:ps": "powershell -NoLogo -NoProfile -ExecutionPolicy Bypass -Command \"& { & '.\\frontend\\scripts\\fe-diagnose.ps1' }\"",
    "orchestrate:ps": "powershell -ExecutionPolicy Bypass -File ./orchestrate.ps1",
    "orchestrate:sh": "bash ./orchestrate.sh",
    "status:matrix:ps": "powershell -NoLogo -NoProfile -ExecutionPolicy Bypass -Command \"& { & '.\\scripts\\status-matrix.ps1' }\"",
    "status:matrix:sh": "bash ./scripts/status-matrix.sh"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
