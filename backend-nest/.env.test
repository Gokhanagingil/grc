# =============================================================================
# GRC Platform - Test Environment Configuration
# =============================================================================
# This file contains test-specific defaults.
# Used by CI/CD pipelines and local test runs.
# =============================================================================

NODE_ENV=test
PORT=3002

# Database - Test database (separate from development)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=123456
DB_NAME=grc_platform_test
DB_SYNC=true

# Security - Test secret
JWT_SECRET=ci-test-jwt-secret-for-testing-purposes-only-32chars
JWT_EXPIRES_IN=1h

# CORS - Allow test servers
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# Demo credentials for e2e tests
DEMO_ADMIN_EMAIL=admin@grc-platform.local
DEMO_ADMIN_PASSWORD=TestPassword123!

# Audit logging - enabled for testing audit functionality
NEST_AUDIT_LOG_ENABLED=true
