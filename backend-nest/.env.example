# Runtime
NODE_ENV=development
PORT=5002
API_PREFIX=/api
API_VERSION=v2
SWAGGER_ENABLED=true
CORS_ORIGIN=http://localhost:5173

# Multi-tenancy
TENANT_HEADER=x-tenant-id
DEFAULT_TENANT_ID=217492b2-f814-4ba0-ae50-4e4f8ecf6216

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=grc
DB_USER=grc
DB_PASS=changeme
DB_SSL=false

# Auth / Security
JWT_SECRET=change-this-in-prod
JWT_EXPIRES=3600s
BCRYPT_SALT_ROUNDS=10

# Logging
LOG_LEVEL=debug
REQUEST_ID_HEADER=x-request-id
BUILD_TAG=LOCAL

# Health / Liveness
HEALTH_PATH=/health
