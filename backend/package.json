{
  "name": "grc-backend",
  "version": "0.1.0",
  "private": true,
  "main": "server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "start:safe:ps": "node -e \"process.env.SAFE_MODE='true'; require('./server');\"",
    "health:probe:ps": "node -e \"const u=process.env.HEALTH_URL??'http://localhost:5000/api/health/ready';fetch(u).then(r=>{if(!r.ok)process.exit(1);console.log('Health OK');}).catch(e=>{console.error(e?.message||e);process.exit(1);});\"",
    "smoke:ps": "node \"../scripts/health-smoke.js\"",
    "smoke:auth-tenant:ps": "node \"../scripts/auth-tenant-smoke.js\"",
    "smoke:login:ps": "node \"../scripts/login-smoke.js\"",
    "lint": "eslint . --ext .js --max-warnings=0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "pino": "^8.21.0",
    "pino-http": "^8.6.1",
    "prom-client": "^15.1.3",
    "sqlite3": "^5.1.7"
  }
}
